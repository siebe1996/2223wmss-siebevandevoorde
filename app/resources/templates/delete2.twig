{% extends 'main2.twig' %}
{% block pageContent %}
    <div class="col-sm-offset-2 col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Taak verwijderen
            </div>
            <div class="panel-body">
                <!-- Task Delete Form -->
                <form action={{ delete }} method="POST" class="form-horizontal">
                    <!-- Task Name -->
                    <div class="form-group">
                        <div class="col-sm-12">
                            <p>Weet je zeker dat je taak <strong>{{ what }}</strong> wil verwijderen?</p>
                        </div>
                    </div>
                    <input type="hidden" name="moduleAction" value="delete" />
                    <input type="hidden" name="id" value="{{ id }}" />
                    <!-- Add Task Button -->
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-default" id="btn-delete">
                                <i class="fa fa-btn fa-trash"></i>Taak verwijderen
                            </button>
                        </div>
                    </div>
                </form>
                <p class="text-left"><a href="{{ index }}">Annuleren en terug naar overzicht</a></p>
            </div>
        </div>
    </div>
{% endblock %}