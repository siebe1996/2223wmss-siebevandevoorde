{% extends 'main08.twig' %}
{% block pageContent %}
        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Companies</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                            <form action="{{ url('companies/search') }}" method="POST">
                                <div class="input-group">
                                    <input type="text" class="form-control" name = "search" id="search" placeholder="Search for..." value="{{ session['flash']['search'] }}">
                                    <span class="input-group-btn"><button class="btn btn-default" type="submit">Go!</button></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="row" style="display: block;">
                    <div class="col-md-12 col-sm-12  ">
                        <div class="x_panel">
                            <div class="x_title">
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a href="{{ url('companies/create') }}" class="close-link"><i class="fa fa-plus"></i> Add a company</a></li>
                                    <li><a href="{{  url('companies/save') }}" class="close-link"><i class="fa fa-plus"></i>Save spreadsheet</a></li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Company name</th>
                                        <th>VAT number</th>
                                        <th>Postal code</th>
                                        <th>City</th>
                                        <th>Primary contact</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for result in results %}
                                    <tr>
                                        <th scope="row">{{  result.id }}</th>
                                        <td>{{ result.name }}</td>
                                        <td>{{  result.vat_number }}</td>
                                        <td>{{ result.postal_code }}</td>
                                        <td>{{ result.city }}</td>
                                        <td>{{ result.first_name ~ ' ' ~ result.last_name }}</td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
        <!-- /page content -->
{% endblock %}

